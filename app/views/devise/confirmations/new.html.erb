<% title t("devise_view.confirmations.resend_confirmation_instructions") %>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit t("devise_view.confirmations.resend_confirmation_instructions") %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>

